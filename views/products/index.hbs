<script>


$(document).ready(function(){


  var ctid = $('#categoryid').val()

  let datatable = $('#data-table').DataTable({
    "processing" : true,
        "ajax" : {
          url:"products/list",
         type:"POST",
        data: function ( d ) {
        d.id = ctid;
    }
      },
    columns:[
    {data:'orders'},
    {data:'name'},
    {data:'description'},
    {data:'price'},
    ],
    language: {url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json'},
    lengthMenu: [[-1,20,50,100], ['All',20,50,100]],
    dom: '<"top"lBf>rt<"bottom"ip><"clear">',
    buttons: [
             {
  extend: 'pdf',
 messageTop: 'PDF created by PDFMake with Buttons for DataTables.',
  title:'Noxus Chocolate',
  exportOptions:{
                 columns:[1,2,3],
               },
    customize: function (doc) {
    doc.content[1].table.widths = 
        Array(doc.content[1].table.body[0].length + 1).join('*').split('');
  }
},
             {
               extend:'excel',
               title:'Noxus Chocolate',
               exportOptions:{
                 columns:[1,2,3]
               }
             },
             
            {
              extend: 'print',
              title:'Noxus Chocolate',
              exportOptions:{
                columns:[1,2,3]
              }
            }
        ],
    columnDefs:[
        {
      render: function(data, type, row){
      const html =  '<i  class="fa fa-reorder"></i>'
      return html
    },
    targets: 0
    },
    {
      render: function(data, type, row){
      const html = `<button class="btn btn-success updatecategory"  data-id="${row.id}" name="update">Güncelle</button>`+
      `<input type="button" data-url="products/delete" data-value="${row.id}" class="btn btn-danger deleted" name="delete" value="Sil">`
      return html
    },
    targets: 5
    },
    {
      render: function(data, type, row){

        if(row.isactive){
          var html =  `<input type="checkbox" class="js-switch isActive" checked data-url="products/isActive" data-id="${row.id}"  " />`
        }else{
          var html =  `<input type="checkbox" class="js-switch isActive" data-url="products/isActive" data-id="${row.id}"  " />`
        }
      return html
    },
    targets: 4
    }
    ]
    
    
  })


   $( ".ranks" ).change(function() {

        ctid = $('#categoryid').val()

        $('#addcategoryid').val(ctid)
      
       datatable.ajax.reload();


       $.swit()

    });



    $(".addproduct").click(function(){
    $('#addname').val('');
    $('#adddescription').val('');
    $('#addprice').val('');
    $('#addpicture').val('');
    $('#openaddmodal').modal('show');
})



$("#addproduct").submit(function(){
  
	  $.ajax({
      type:'POST',
      url:'/products/add',
      async: false,
      cache: false,
      contentType: false,
      processData: false,
      data: new FormData($('#addproduct')[0]),
      success :function(data){

      $.alerts('success','Well done')
      ctid = $('#addcategoryid').val()
      $('#categoryid').val(ctid)   
      $('#openaddmodal').modal('hide');
      datatable.ajax.reload();
      }
    })
    .fail(function(err) {
       $.errorMessage(err)
    })


 });

$('#data-table').on('click', '.updatecategory', function(){

      $.ajax({
        type:'POST',
        url:'products/update',
        data:{id:$(this).data('id')},
        success :function(result){
          $('#updatepicture').val('');
          $('#updatename').val(result.name);
          $('#updatedescription').val(result.description);
          $('#updateprice').val(result.price);
          $('#updatecategoryid').val(result.categoryid.id);
          $('#id').val(result.id);
          $('#openupdatemodal').modal('show');
        }
    })
})



    $("#updateproduct").submit(function(){
 
      $.ajax({
      type:'Patch',
      url:'/products/update',
      async: false,
      cache: false,
      contentType: false,
      processData: false,
      data: new FormData($('#updateproduct')[0]) ,
      success :function(result){

       $('#openupdatemodal').modal('hide');
       datatable.ajax.reload();
       $.alerts('success','Well done')
       $.swit()
      }
    })
    .fail(function(err) {
       $.errorMessage(err)
    })
       
});



  $('#data-table').on("click", ".deleted", function(){

    swal({
      title: "Are you sure?",
      text: "Once deleted,",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
    .then((willDelete) => {
      if (willDelete) {
        $.ajax({
          url: $(this).data('url'),
          type: 'DELETE',
          data: {id: $(this).data('value')},
          success: function(result){
             datatable.ajax.reload();
                  swal("Poof! Your imaginary file has been deleted!", {
                      icon: "success",
                    });
          }
        })
      } else {
        swal("Your imaginary file is safe!");
      }
    });

    })






  $('#data-table').on("click", ".deleted", function(){

    swal({
      title: "Are you sure?",
      text: "Once deleted,",
      icon: "warning",
      buttons: true,
      dangerMode: true,
    })
    .then((willDelete) => {
      if (willDelete) {
        $.ajax({
          url: $(this).data('url'),
          type: 'DELETE',
          data: {id: $(this).data('value')},
          success: function(result){
             datatable.ajax.reload();
                  swal("Poof! Your imaginary file has been deleted!", {
                      icon: "success",
                    });
          }
        })
      } else {
        swal("Your imaginary file is safe!");
      }
    });





});






})

</script>






