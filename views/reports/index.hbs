          var date = null
          var type = null

         $('#type').change(function(){

            type=$('#type').val()


            switch(type){
              case 'gelir':
              $('#ciro').show()
              $('#expenses').hide()
              $('#typeExpenses').hide()
              break
              case 'gider':
              $('#ciro').hide()
              $('#expenses').show()
               $('#typeExpenses').hide()
              break
              case '0':
               $('#ciro').hide()
              $('#expenses').hide()
               $('#typeExpenses').hide()
              break
              default:
              $('#ciro').hide()
              $('#expenses').hide()
              $('#typeExpenses').show()
              break
            }




        })
            

  

      $("#reports").submit(function(){

       type= $('#type').val()
       date = $('#tarih').val()

 	    $.ajax({
      type:'POST',
      url:'reports/query',
      data:{'date':date, 'type':type},
      success :function(result){

        switch(type){
          case 'gelir':
          $('#ciro').show()
          cirotable.ajax.reload()
          break
          case 'gider':
           $('#expenses').show()
          exptable.ajax.reload()
          break
           case '0':
            $('#ciro').hide()
            $('#expenses').hide()
            $('#typeExpenses').hide()
              break
          default:
          $('#typeExpenses').show()
          typeExpenses.ajax.reload()
          break
        }

       

    

      }
    })
    .fail(function(err) {

     alert(JSON.stringify(err))

    })

 });



      

