<!DOCTYPE html>
<html lang="en">
<head>
  {{>head}}

  {{>head.css}}

  {{>head.js}}
</head>

<body class="nav-md">

<div class="container body">
  <div class="main_container">

    {{>head.sidebar}}

    {{>head.topnav}}



    <!-- page content -->
    <div class="right_col" role="main">

      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="x_panel">
            <div class="x_title">
              <button class="btn btn-success addtypeexpenses" style="position: relative; float:right">Gider Türü Ekle
              </button>
              <button class="btn btn-success addexpenses" style="position: relative; float:right">Gider Ekle</button>
              <h2>Gider İşlemleri</h2>

              <div class="clearfix"></div>
            </div>
            <div class="x_content">

              <table id="data-table" cellspacing="0" width="100%" class="table table-striped table-bordered"
                     style="text-align: center;">
                <thead>
                <tr>
                  <th style="text-align: center;">Details</th>
                  <th style="text-align: center;">Tarih</th>
                  <th style="text-align: center;">Tür</th>
                  <th style="text-align: center;">Toplam</th>
                  <th style="text-align: center;">İşlemler</th>
                </tr>
                </thead>


                <tbody>

                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
    </div>

    {{!-- Add start --}}
    <div class="modal fade" id="openaddmodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" style="text-align: center;" id="exampleModalLabel">Gider Ekle</h5>

          </div>
          <div class="modal-body">
            <form method="dialog" action="" id="addexpenses">
              <div class="mb-4">
                <label for="recipient-name" class="col-form-label">Tür:</label>
                <select class="form-control col-md-7 col-xs-12 chancetype" id="addtype" name="typeexpense" required="">
                  {{#each typeExpense}}

                    <option value="{{id}}">{{name}}</option>

                  {{/each}}

                </select>
              </div>

              <div class="mb-4" style="margin-top: 50px;">
                <label for="message-text" class="col-form-label">Açıklama:</label>
                <input type="text" class="form-control" id="adddescription" name="description">
              </div>

              <div class="mb-4" style="margin-top: 15px;">
                <label for="message-text" class="col-form-label">Toplam:</label>
                <input type="text" class="form-control" name="total" id="addtotal" required="">
              </div>

              <div class="mb-4" style="margin-top: 15px;">
                <label for="message-text" class="col-form-label">Personel:</label>
                <select class="form-control col-md-7 col-xs-12" id="addpersonnel" name="personnel">

                  <option value="0">Seçiniz</option>

                  {{#each allPersonnel}}

                    <option value="{{id}}">{{name}}</option>

                  {{/each}}

                </select>
              </div>

              <div class="mb-4" style="margin-top: 50px; ">
                <label for="message-text" class="col-form-label">Tarih:</label>
                <div class="input-group date todaydate">
                  <input type="text" class="form-control todaydate" style="text-align: center;" name="date" required="">

                  <span class="input-group-addon"><span class="glyphicon-calendar glyphicon"></span></span>
                </div>

              </div>
              <br>

              <div class="modal-footer" style="margin-bottom: -15px; text-align: center;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <input type="submit" name="" class="btn btn-primary" value="Kaydet">
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>


    {{!-- Add END --}}

    {{!-- Add Type Start --}}

    <div class="modal fade" id="opentypemodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" style="text-align: center;" id="exampleModalLabel">Gider Türü Ekle</h5>

          </div>
          <div class="modal-body">
            <form method="dialog" action="" id="addtypeexpenses">
              <div class="mb-4">
                <label for="recipient-name" class="col-form-label">İsim:</label>
                <input type="text" class="form-control" name="name" id="typeexpenses" required="">
              </div>

              <div class="modal-footer" style="margin-bottom: -15px; text-align: center;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <input type="submit" name="" class="btn btn-primary" value="Kaydet">
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    {{!-- Add Type End --}}


    {{!-- update  Start --}}

    <div class="modal fade" id="openupdatemodal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" style="text-align: center;" id="exampleModalLabel">Gider Güncelle</h5>

          </div>
          <div class="modal-body">
            <form action="" method="dialog" id="updateExpenses">
              <div class="mb-4">
                <label for="recipient-name" class="col-form-label">Tür:</label>
                <select class="form-control col-md-7 col-xs-12 chancetype" id="updatetypeexpense" name="typeexpense"
                        required>

                  {{#each typeExpense}}

                    <option value="{{id}}">{{name}}</option>

                  {{/each}}

                </select>
              </div>

              <div class="mb-4" style="margin-top: 50px;">
                <label for="message-text" class="col-form-label">Açıklama:</label>
                <input type="text" class="form-control" id="updatedescription" name="description" value="">
              </div>

              <div class="mb-4" style="margin-top: 15px;">
                <label for="message-text" class="col-form-label">Toplam:</label>
                <input type="text" class="form-control" id="updatetotal" name="total" required="">
              </div>

              <div class="mb-4" style="margin-top: 15px;">
                <label for="message-text" class="col-form-label">Personel:</label>
                <select class="form-control col-md-7 col-xs-12" id="updatepersonnel" name="personnel">

                  <option value="0">Seçiniz</option>

                  {{#each allPersonnel}}

                    <option value="{{id}}">{{name}}</option>

                  {{/each}}


                </select>
              </div>

              <div class="mb-4" style="margin-top: 50px; ">
                <label for="message-text" class="col-form-label">Tarih:</label>
                <div class="input-group date todaydate">
                  <input type="text" class="form-control todaydate" style="text-align: center;" name="date" required="">

                  <span class="input-group-addon"><span class="glyphicon-calendar glyphicon"></span></span>
                </div>

              </div>
              <br>

              <div class="modal-footer" style="margin-bottom: -15px; text-align: center;">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                <input type="submit" name="" class="btn btn-primary" value="Güncelle">
              </div>
              <input type="hidden" name="id" id="id">
            </form>

          </div>
        </div>
      </div>
    </div>

    {{!-- update  End --}}

    {{!-- start details modal --}}
    <div class="modal fade" id="expensesdetailmodal" tabindex="-1" role="dialog"
         aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

          <div class="modal-body">
            <center id="expensesdetail">

            </center>
          </div>

        </div>
      </div>
    </div>
    {{!-- end details modal --}}

    <script>
      $(document).ready(function() {


        let datatable = $("#data-table").DataTable({
          "processing": true,
          "ajax": {
            url: "expenses/list",
            type: "POST"
          },
          columns: [
            { data: "details" },
            { data: "date" },
            { data: "type" },
            { data: "total" }

          ],

          order: [[1, "desc"]],
          language: { url: "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json" },
          lengthMenu: [[-1, 20, 50, 100], ["All", 20, 50, 100]],
          pageLength: 50,
          dom: "<\"top\"lBf>rt<\"bottom\"ip><\"clear\">",
          buttons: [
            {
              extend: "pdf",
              messageTop: "PDF created by PDFMake with Buttons for DataTables.",
              title: "Noxus Chocolate",
              exportOptions: {
                columns: [1, 2, 3]
              },
              customize: function(doc) {
                doc.content[1].table.widths =
                  Array(doc.content[1].table.body[0].length + 1).join("*").split("");
              }
            },
            {
              extend: "excel",
              title: "Noxus Chocolate",
              exportOptions: {
                columns: [1, 2, 3]
              }
            },

            {
              extend: "print",
              title: "Noxus Chocolate",
              exportOptions: {
                columns: [1, 2, 3]
              }
            }
          ],
          columnDefs: [
            {
              render: function(data, type, row) {
                const html = `<button class="btn btn-success updateexpences"  data-id="${row.id}" name="update">Güncelle</button>` +
                  `<input type="button" data-url="expenses/delete" data-value="${row.id}" class="btn btn-danger deleted" name="delete" value="Sil">`;
                return html;
              },
              targets: 4
            },
            {
              render: function(data, type, row) {

                const html = `<i data-id="${row.id}" class="fa fa-plus exdetail" ></i>`;
                return html;
              },
              targets: 0
            }


          ]


        });


        $("#data-table").on("click", ".exdetail", function() {

          const id = $(this).data("id");

          $.ajax({
            type: "POST",
            url: "/expenses/details",
            data: { id: id },
            success: function(result) {

              var detail = "";

              if (result.personnel != null) {
                detail += `<span>Personel: ${result.personnel.name}</span> <br>`;
              }

              if (result.description != "") {
                detail += `<span>Açıklama: ${result.description}</span>`;
              }

              if (result.personnel != null || result.description != "") {
                $("#expensesdetail").html(detail);
                $("#expensesdetailmodal").modal("show");
              }


            }
          })
            .fail(function(err) {
              $.errorMessage(err);
            });


        });


        $("#addpersonnel").prop("disabled", true);


        $(".chancetype").change(function() {

          const optionSelected = $(this).find("option:selected");
          const textSelected = optionSelected.text();


          if (textSelected === "Maaş" || textSelected === "Mesai") {
            $("#addpersonnel").prop("disabled", false);
          } else {
            $("#addpersonnel").val(0);
            $("#addpersonnel").prop("disabled", true);

          }


        });


        $(".addtypeexpenses").click(function() {
          $("#typeexpenses").val("");
          $("#opentypemodal").modal("show");
        });


        $("#addtypeexpenses").submit(function() {

          $.ajax({
            type: "POST",
            url: "/expenses/addType",
            data: $(this).serialize(),
            success: function(veri) {

              $.alerts("success", "Well done");
              $("#opentypemodal").modal("hide");


            }
          })
            .fail(function(err) {
              $.errorMessage(err);
            });


        });


        $(".addexpenses").click(function() {

          $("#adddescription").val("");
          $("#addtotal").val("");
          $("#addpersonnel").val(0);
          $(".todaydate").val(new Date().format("Y-m-d H:i:s").toLocaleString("tr-TR"));

          $("#openaddmodal").modal("show");
        });


        $("#addexpenses").submit(function() {

          $.ajax({
            type: "POST",
            url: "/expenses/add",
            data: $(this).serialize(),
            success: function(veri) {

              $("#openaddmodal").modal("hide");
              $.alerts("success", "Well done");


              datatable.ajax.reload();

            }
          })
            .fail(function(err) {
              $.errorMessage(err);
            });


        });


        $("#data-table").on("click", ".updateexpences", function() {


          $.ajax({
            type: "POST",
            url: "expenses/update",
            data: { id: $(this).data("id") },
            success: function(result) {

              $(".todaydate").val($.trim(result.date));
              $("#updatetypeexpense").val(result.typeexpense.id);
              $("#updatetotal").val(result.total);
              $("#updatedescription").val(result.description);
              $("#updatepersonnel").val(result.personnel);
              $("#id").val(result.id);
              $("#openupdatemodal").modal("show");
            }
          });
        });

        $("#updateExpenses").submit(function() {


          $.ajax({
            type: "Patch",
            url: "expenses/update",
            data: $(this).serialize(),
            success: function(veri) {

              $("#openupdatemodal").modal("hide");
              datatable.ajax.reload();
              $.alerts("success", "Well done");
            }
          })
            .fail(function(err) {
              $.errorMessage(err);
            });

        });


        $("#data-table").on("click", ".deleted", function() {

          swal({
            title: "Are you sure?",
            text: "Once deleted,",
            icon: "warning",
            buttons: true,
            dangerMode: true
          })
            .then((willDelete) => {
              if (willDelete) {


                $.ajax({
                  url: $(this).data("url"),
                  type: "DELETE",
                  data: { id: $(this).data("value") },
                  success: function(result) {
                    datatable.ajax.reload();
                    swal("Poof! Your imaginary file has been deleted!", {
                      icon: "success"
                    });
                  }
                });


              } else {
                swal("Your imaginary file is safe!");
              }
            });


        });


      });
    </script>
    <script>
      $(".todaydate").datetimepicker({
        format: "YYYY-MM-DD HH:mm:ss"
      });
    </script>

    <footer>
      {{>footer}}
    </footer>

  </div>
</div>

{{>footer.js}}

</body>
</html>
